@{
    ViewBag.Title = "GamePage";
}

<div id="content">

<h1>Wellcome to guess game </h1>

<form asp-action="GuessingGame" method="post">
    <label for="xNumber">Enter Your guess number:</label>
    <input type="number" id="xNumber" name="xNumber" min="1" max="100" required>
    <input type="submit" value="Send">
</form>

<div>
    @ViewBag.Msg
</div>
